    "properties" : {
        "_id" : {
            "type" : "integer"
        }
    },
    "patternProperties" : {
        "^00" :  {
            "$ref" : "#/subschemas/controlfield"
        },
        "^([1-9]..|0[1-9].)$" : {
            "$ref" : "#/subschemas/datafield"
        }
    },
    "additionalProperties": false,
    "required" : ["_id"],
    
    "subschemas" : {
        "controlfield" : {
            "type" : "array",
            "minItems" : 1,
            "items" : {
                "type" : "string"
            }
        },
        "datafield" : {
            "type" : "array",
            "minItems" : 1,
            "items" : {
                "type" : "object",
                "properties" : {
                    "indicators" : {
                        "type" : "array",
                        "minItems" : 2,
                        "maxItems" : 2,
                        "items" : {
