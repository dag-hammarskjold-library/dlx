                            "minLength" : 1,
                            "maxLength" : 1
                        }
                    },
                    "subfields" : {
                        "type" : "array",
                        "minItems" : 1,
                        "items" : {
                            "type" : "object",
                            "properties" : {
                                "code" : {
                                    "type" : "string",
                                    "minLength" : 1,
                                    "maxLength" : 1
                                },
                                "value" : {
                                    "type" : "string"
                                },
                                "xref" : {
                                    "type" : "integer"
                                }
                            },
                            "additionalProperties" : false,
                            "required" : ["code"]
                        }
                    }
                },
                "additionalProperties" : false,
                "required" : ["indicators", "subfields"]
            }
        }    
    }
}
